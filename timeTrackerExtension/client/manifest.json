{
  "manifest_version": 3,
  "name": "Hello Extensions",
  "description": "Base Level Extension",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "declarativeNetRequest",
    "activeTab",
    "scripting"  
  ],
  "host_permissions": [  
    "*://*.instagram.com/*",
    "*://*.reddit.com/*",
    "*://x.com/*",
    "*://*.tiktok.com/*",
    "*://*.snapchat.com/*",
    "http://*/*",
    "https://*/*",
    "http://localhost:3001/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}

  